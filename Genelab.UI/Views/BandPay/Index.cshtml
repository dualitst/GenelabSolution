        color:white;*/
    }
</style>

<div class="row clearfix">
    <div class="col-md-12">
        <div class="card">
            <div class="body">
                <h2>@ViewBag.Title.</h2>
                <h4>Solicitudes validadas por recepción pendientes de pago</h4>

                <br />
                <div class="row clearfix">
                    <div class="form-inline">
                        <div class="col-md-2">
                            <select id="" name="" class="form-control" data-live-search="true" required>
                                <option value="Empresa" selected>Empresa</option>
                                <option value="1">Finsoft SA</option>
                            </select>
                        </div>
                    </div>
                </div>

                <br />
                <div class="row clearfix">
                    <div class="col-md-12">

                        <div id="grdDatos" style="height:600px;" class="ag-theme-material ag-compact"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCargar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="defaultModalLabel">Registrar pago</h4>
            </div>
            <div class="modal-body">


                <div class="col-md-3" hidden>
                    <input type="text" class="form-control" maxlength="30" id="IdSolicitud" name="idSolicitud">
                </div>


                <div class="form-group" style="padding:5%">
                    @*TABLA DE PACIENTES*@
                    <table class="table table-bordered table-hover" id="TablaPacientes">
                        <thead>
                            <tr >
                                <th scope="col">Nombre Paciente</th>
                                <th scope="col">Estudio</th>
                                <th scope="col">Precio</th>
                            </tr>
                        </thead>
                        <tbody id="table_body">
                        </tbody>
                    </table>
                </div>


                <form id="form_pago" class="form-horizontal" enctype="multipart/form-data" method="post">

                    <div class="col-md-12">
                        <div class="form-check form-check-inline">

                            <div class="col-md-3">
                                <input class="form-check-input message_pri" type="radio" name="tipoPagoRad" id="inlineRadio1" value="EFECTIVO">
                                <label class="form-check-label radio-inline" for="inlineRadio1">
                                    Efectivo
                                </label>
                            </div>

                            <div class="col-md-3">
                                <input class="form-check-input message_pri" type="radio" name="tipoPagoRad" id="inlineRadio2" value="TARJETA">
                                <label class="form-check-label radio-inline" for="inlineRadio2">
                                    Tarjeta
                                </label>
                            </div>

                            <div class="col-md-3">
                                <input class="form-check-input message_pri" type="radio" name="tipoPagoRad" id="inlineRadio3" value="TRANSFERENCIA">
                                <label class="form-check-label radio-inline" for="inlineRadio3">
                                    Transferencia
                                </label>
                            </div>
                        </div>
                        <br /><br /><br />
                    </div>

                    <br />
                    <div id="tarjetaDIV" class="form-group hidden">
                        <label class="col-md-2 control-label">Tarjeta</label>
                        <div class="col-md-10 form-custom">
                            <input type="text" class="form-control" maxlength="30" id="Tarjeta" name="Tarjeta">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Monto</label>
                        <div class="col-md-10 form-custom">
                            <input type="text" class="form-control" id="Monto" maxlength="10" name="Monto" required>
                        </div>
                    </div>


                    <div id="ComprobanteDIV" class="form-group hidden">
                        <label class="col-md-2 control-label">Subir comprobante</label>
                        <div class="col-md-10">
                            <input type="file" class="form-control" value="" id="ComprobanteP" name="ComprobanteP">
                        </div>
                    </div>


                    <br />
                    <br />

                    <div class="form-group">

                        <div class="col-md-offset-8 col-md-2">
                            <input type="button" id="btnCancelar" class="btn btn-secondary" data-dismiss="modal" value="Cancelar" />
                        </div>

                        <div class="col-md-2">
                            <input type="submit" id="btnPagar" class="btn btn-primary" value="Guardar" />
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
             
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/src/BandPay/bandPay.js"></script>

<script language="javascript" type="text/javascript">

    $(document).ready(function () {
    });

</script>


